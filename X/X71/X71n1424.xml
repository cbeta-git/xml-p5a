<milestone n="1" unit="juan"/>
<pb n="0752b" ed="X" xml:id="X71.1424.0752b"/>
<lb n="0752b01" ed="X"/>
<lb n="0752b02" ed="X"/>
<lb n="0752b03" ed="X"/>
